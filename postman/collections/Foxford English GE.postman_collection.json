              "",
              "pm.test(\"System score equals teacher's Foxford score\", function () {",
              "    pm.expect(systemScore, \"systemScore\").to.eql(teacherScore);",
              "});",
              "",
              "console.log(\"Teacher score:\", teacherScore, \"System score:\", systemScore);"
            ],
