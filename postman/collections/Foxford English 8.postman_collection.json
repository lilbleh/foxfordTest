              "",
              "let res;",
              "try {",
              "    res = pm.response.json();",
              "} catch (e) {",
              "    pm.test(\"Response is valid JSON\", function () {",
              "        throw new Error(\"Response is not JSON: \" + e.message);",
              "    });",
              "}",
              "",
